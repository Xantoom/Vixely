{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "preserve",
	"jsxSingleQuote": false,
	"trailingComma": "all",
	"bracketSpacing": true,
	"objectWrap": "collapse",
	"bracketSameLine": false,
	"arrowParens": "always",
	"proseWrap": "always",
	"vueIndentScriptAndStyle": true,
	"endOfLine": "lf",
	"embeddedLanguageFormatting": "auto",
	"singleAttributePerLine": false,
	"experimentalSortImports": { "newlinesBetween": false },
	"experimentalSortPackageJson": true,
	"ignorePatterns": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		"public",
		"vixely-core",
		"docs",
		".claude",
		".github",
		".tanstack",
		".agents",
		".vscode",
		".idea",
	],
}
