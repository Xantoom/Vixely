{
	"name": "vixely",
	"private": true,
	"type": "module",
	"scripts": {
		"setup:ffmpeg": "mkdir -p public/ffmpeg && cp node_modules/@ffmpeg/core-mt/dist/esm/ffmpeg-core.js public/ffmpeg/ffmpeg-core.js && cp node_modules/@ffmpeg/core-mt/dist/esm/ffmpeg-core.wasm public/ffmpeg/ffmpeg-core.wasm && cp node_modules/@ffmpeg/core-mt/dist/esm/ffmpeg-core.worker.js public/ffmpeg/ffmpeg-core.worker.js && cp node_modules/@ffmpeg/core/dist/esm/ffmpeg-core.js public/ffmpeg/ffmpeg-core-st.js && cp node_modules/@ffmpeg/core/dist/esm/ffmpeg-core.wasm public/ffmpeg/ffmpeg-core-st.wasm",
		"postinstall": "bun run setup:ffmpeg",
		"dev": "vite",
		"build": "vite build",
		"build:wasm": "wasm-pack build vixely-core --target web --out-dir ../src/wasm --release",
		"preview": "vite preview",
		"lint": "oxlint .",
		"lint:fix": "oxlint . --fix",
		"fmt": "oxfmt . --write",
		"fmt:check": "oxfmt . --check"
	},
	"dependencies": {
		"@ffmpeg/core": "0.12.10",
		"@ffmpeg/core-mt": "0.12.10",
		"@ffmpeg/ffmpeg": "^0.12.15",
		"@ffmpeg/util": "^0.12.2",
		"@tanstack/react-query": "^5.90.21",
		"@tanstack/react-router": "^1.159.5",
		"lucide-react": "^0.563.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-helmet-async": "^2.0.5",
		"sonner": "^2.0.7",
		"zustand": "^5.0.11"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/react-router-devtools": "^1.159.5",
		"@tanstack/router-plugin": "^1.159.5",
		"@types/bun": "latest",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.4",
		"oxfmt": "^0.28.0",
		"oxlint": "^1.47.0",
		"tailwindcss": "^4.1.18",
		"vite": "8.0.0-beta.13",
		"vite-plugin-top-level-await": "^1.6.0",
		"vite-plugin-wasm": "^3.5.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	}
}
